{
  "extends": "../../tsconfig.json",
  "compilerOptions": {
    "rootDir": "src",
    "outDir": "dist",
    "noEmit": false,
    "composite": false,
    "baseUrl": "src",
    "paths": {
      "@s2s/fantasy/types": ["content/fantasy/_schema/types"],
      "@engine/*": ["*"],
      "@engine/content/*": ["content/*"],
      "@engine/types/*": ["types/*"],
      "@engine/ambient": ["ambient.config.ts"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx"],
  "exclude": [
    "node_modules",

    // on met de côté les scripts et adapters qui explosent le typage
    "src/content/fantasy/bestiary/adapter.ts",
    "src/content/fantasy/bestiary/encounter-engine.ts",
    "src/content/fantasy/rituals/generate-all-rituals.ts"
  ]
}
