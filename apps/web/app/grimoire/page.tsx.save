export const dynamic = "force-dynamic";

import Link from "next/link";
import { promises as fs } from "fs";
import path from "path";
import { BookShell, PageLeft, PageRight } from "@/components/Grimoire";
import type { GrimoireEntry } from "@/config/grimoire";
import CreateForm from "./CreateForm";

async function load(): Promise<GrimoireEntry[]> {
  const file = path.join(process.cwd(), "data/grimoire.json");
  try {
    return JSON.parse(await fs.readFile(file, "utf8"));
  } catch {
    return [];
  }
}

export default async function GrimoireIndex() {
  const items = (await load()).sort((a, b) =>
    (a.title || "").localeCompare(b.title || "")
  );

