{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@/*": ["app/*"],
      "@lib": ["./lib"],
      "@lib/supabase": ["./lib/supabase"],
      "@lib/getUserId": ["./lib/getUserId.ts"],
      "@components/*": ["components/*"],
      "@hooks/*": ["hooks/*"],
      "@utils/*": ["utils/*"],
      "@config/*": ["config/*"],
      "@s2s/fantasy/types": ["packages/engine/src/content/fantasy/_schema/types"]

      "@engine/*": ["../../packages/engine/src/*"],
      "@engine/content/*": ["../../packages/engine/src/content/*"],
      "@engine/types/*": ["../../packages/engine/src/types/*"],
      "@engine/ambient": ["../../packages/engine/src/ambient.config.ts"],

      "@mithril-quest/*": ["src/content/fantasy/*"],
      "@bestiary/*": ["../../packages/engine/src/content/fantasy/bestiary/*"],
      "@spells/*": ["../../packages/engine/src/content/fantasy/spells/*"],
      "@eras/*": ["../../packages/engine/src/content/fantasy/eras/*"],
      "@worlds-content/*": ["../../packages/engine/src/content/fantasy/worlds/*"],

// --- Mithril Framework --- //
    "@mithril/*": ["../../packages/engine/src/mithril/*"],
    "@mithrilHooks/*": ["../../packages/engine/src/mithril/hooks/*"],
    "@lib/mithril/*": ["../../packages/engine/src/mithril/*"],

    // --- Grimoire Content --- //
    "@grimoire/*": ["../../packages/engine/src/content/grimoire/*"],

      "@config/worlds": ["../../packages/engine/src/getWorlds.ts"],

      "@lib/*": ["lib/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
