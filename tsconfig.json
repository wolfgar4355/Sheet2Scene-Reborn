{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",

    "paths": {
      /* --- App --- */
      "@app/*": ["app/*"],
      "@lib/*": ["lib/*"],
      "@lib/supabase": ["lib/supabase"],
      "@components/*": ["components/*"],
      "@hooks/*": ["hooks/*"],
      "@utils/*": ["utils/*"],
      "@config/*": ["config/*"],

      /* --- Legacy @s2s fantasy imports (BREAKING â†’ FIXED) --- */
      "@s2s/fantasy/types": ["packages/engine/src/content/fantasy/_schema/types.d.ts"],

      /* --- Engine Core --- */
      "@engine/*": ["packages/engine/src/*"],
      "@engine/content/*": ["packages/engine/src/content/*"],
      "@engine/types/*": ["packages/engine/src/types/*"],
      "@engine/ambient": ["packages/engine/src/ambient/ambient.config.ts"],

      /* --- Engine Adapters --- */
      "@adapters/*": ["packages/engine/src/adapters/*"],

      /* --- Fantasy Content (NEW CLEAN PATHS) --- */
      "@fantasy/*": ["packages/engine/src/content/fantasy/*"],
      "@fantasy/bestiary/*": ["packages/engine/src/content/fantasy/bestiary/*"],
      "@fantasy/spells/*": ["packages/engine/src/content/fantasy/spells/*"],
      "@fantasy/rituals/*": ["packages/engine/src/content/fantasy/rituals/*"],
      "@fantasy/habitats/*": ["packages/engine/src/content/fantasy/habitats/*"],
      "@fantasy/eras/*": ["packages/engine/src/content/fantasy/eras/*"],
      "@fantasy/worlds/*": ["packages/engine/src/content/fantasy/worlds/*"],

      /* --- GM / Game Master --- */
      "@gm/*": ["packages/engine/src/gm/*"],

      /* --- Mithril Framework --- */
      "@mithril/*": ["packages/engine/src/mithril/*"],
      "@mithrilHooks/*": ["packages/engine/src/mithril/hooks/*"],
      "@lib/mithril/*": ["packages/engine/src/mithril/*"],

      /* --- Grimoire (your UI) --- */
      "@grimoire/*": ["packages/engine/src/content/grimoire/*"],

      /* --- Worlds Helper --- */
      "@config/worlds": ["packages/engine/src/getWorlds.ts"]
    }
  },

  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
