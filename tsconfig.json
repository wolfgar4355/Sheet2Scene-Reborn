{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "@app/*": ["./apps/*"],
      "@lib/*": ["./lib/*"],
      "@components/*": ["./components/*"],
      "@hooks/*": ["./hooks/*"],
      "@utils/*": ["./utils/*"],
      "@config/*": ["./config/*"]
    }
  },
  "include": ["apps/web/**/*", "next-env.d.ts"],
  "exclude": [
    "node_modules",

    // ❌ exclure tout l’ancien engine
    "packages/engine/src/content/**/*",
    "packages/engine/src/content",

    // ❌ exclure backups et vieux imports
    "**/_fantasy_old/**/*",
    "**/_fantasy_old",
    "**/fantasy-import/**/*",
    "**/fantasy-import",

    // TS tests
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}
"references": [
  { "path": "./packages/engine" }
]
