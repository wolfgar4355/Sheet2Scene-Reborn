{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ES2020",
    "lib": ["ES2020", "DOM"],
    "declaration": true,
    "outDir": "dist",
    "rootDir": "src",
    "strict": true,
    "moduleResolution": "bundler",
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,

    "baseUrl": "./src",
    "paths": {
      "@engine/*": ["./*"],
      "@engineContent/*": ["./content/fantasy/*"]
    }
  },

  "include": ["src", "data"],
  "exclude": ["node_modules"]
}
