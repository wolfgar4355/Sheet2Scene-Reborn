{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      /* UI */
      "@/*": ["app/*"],
      "@components/*": ["components/*"],
      "@hooks/*": ["hooks/*"],
      "@utils/*": ["utils/*"],
      "@config/*": ["config/*"],

      /* ENGINE ROOT */
      "@engine/*": ["../../packages/engine/src/*"],

      /* ENGINE CONTENT */
      "@engine/content/*": ["../../packages/engine/src/content/*"],
      "@engine/types/*": ["../../packages/engine/src/types/*"],
      "@engine/ambient/*": ["../../packages/engine/src/ambient.config.ts"],

      /* GRIMOIRE */
      "@grimoire/*": ["../../packages/engine/src/content/grimoire/*"],

      /* FANTASY */
      "@fantasy/*": ["../../packages/engine/src/content/fantasy/*"],
      "@bestiary/*": ["../../packages/engine/src/content/fantasy/bestiary/*"],
      "@spells/*": ["../../packages/engine/src/content/fantasy/spells/*"],
      "@eras/*": ["../../packages/engine/src/content/fantasy/eras/*"],
      "@worlds-content/*": ["../../packages/engine/src/content/fantasy/worlds/*"]
    }
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
