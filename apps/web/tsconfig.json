{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": false,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      /* --- App --- */
      "@/*": ["app/*"],
      "@components/*": ["components/*"],
      "@hooks/*": ["hooks/*"],
      "@config/*": ["config/*"],
      "@types/*": ["types/*"],
      "@lib/*": ["lib/*"],
      "@utils/*": ["utils/*"],

      /* --- Mithril Engine --- */
      "@engine/*": ["../../packages/engine/src/*"],
      "@engineTypes/*": ["../../packages/engine/src/types/*"],
      "@engineContent/*": ["../../packages/engine/src/content/*"],

      /* --- RPG (Sheet2Scene) System --- */
      "@fantasy/*": ["lib/s2s/fantasy/*"],
      "@bestiary/*": ["lib/s2s/fantasy/bestiary/*"],
      "@rpg/*": ["lib/s2s/*"],

      /* --- Supabase --- */
      "@supabase/*": ["lib/supabase/*"],

      /* --- Mithril Framework --- */
      "@mithril/*": ["lib/mithril/*"],
      "@mithrilHooks/*": ["lib/mithril/hooks/*"],

      /* --- Grimoire UI --- */
      "@grimoire/*": ["lib/grimoire/*"]
    }
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
