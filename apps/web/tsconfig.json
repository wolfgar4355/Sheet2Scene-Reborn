{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJS": false,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",

    "paths": {
      "*": ["*"],

      "@app/*": ["app/*"],
      "@config/*": ["config/*"],
      "@hooks/*": ["hooks/*"],
      "@components/*": ["components/*"],
      "@types/*": ["types/*"],
      "@utils/*": ["utils/*"],

      /* --- S2S ENGINE --- */
      "@engine/*": ["lib/s2s/engine/*"],
      "@fantasy/*": ["lib/s2s/fantasy/*"],
      "@bestiary/*": ["lib/s2s/fantasy/bestiary/*"],

      /* --- MITHRIL ENGINE --- */
      "@lib/*": ["lib/*"],
      "@lib/mithril/*": ["lib/mithril/*"],
      "@mithril/*": ["components/mithril/*"]
    }
  },

  "plugins": [{ "name": "next" }],

  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx", ".next/types/**/*.ts"],
  "exclude": ["node_modules"]
}
