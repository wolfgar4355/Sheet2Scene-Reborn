{
  "compilerOptions": {
    "target": "ES2020",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJS": false,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
"paths": {
  "@/*": ["./*"],
  "@app/*": ["app/*"],

  "@config/*": ["config/*"],
  "@engine/*": ["lib/s2s/engine/*"],
  "@fantasy/*": ["lib/s2s/fantasy/*"],
  "@bestiary/*": ["lib/s2s/fantasy/bestiary/*"],

  "@mithril/*": ["lib/mithril/*"],
  "@mithrilHooks/*": ["lib/mithril/hooks/*"],

  "@grimoire/*": ["lib/grimoire/*"],

  "@supabase/*": ["lib/supabase/*"],

  "@types/*": ["types/*"],
  "@lib/*": ["lib/*"],
  "@hooks/*": ["hooks/*"],
  "@components/*": ["components/*"]
}
  },
  "plugins": [
    {
      "name": "next"
    }
  ],
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
