            {items.map(e => (
              <div key={e.id} className="flex items-center justify-between rounded-lg border p-3">
                <div className="font-medium">
                  {e.icon ? `${e.icon} ` : ""}{e.title}
                </div>
                {e.tags?.length ? (
                  <div className="text-xs opacity-70">{e.tags.join(" ¬∑ ")}</div>
                ) : null}
                <FlipLink href={`/grimoire/${e.id}`} className="text-blue-700 hover:underline ml-3">
  ouvrir
